<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dungeon_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".DungeonCardActivity">
    <!--  android:theme="@style/AppTheme.NoActionBar">   -->



    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="450dp"
        android:layout_height="850dp"
        android:src="@drawable/gifsky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/difficultyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:text="0"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/textChangeBox"
        app:layout_constraintStart_toEndOf="@+id/textDifficulty" />

    <View
        android:id="@+id/bigBoxGame"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/orangelinearborder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <com.isen.minigamestudio.Classes.LittleBox
        android:id="@+id/box1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@+id/bigBoxGame"
        app:layout_constraintTop_toTopOf="@+id/bigBoxGame" />

    <com.isen.minigamestudio.Classes.LittleBox
        android:id="@+id/box2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@+id/bigBoxGame"
        app:layout_constraintStart_toStartOf="@+id/bigBoxGame"
        app:layout_constraintTop_toTopOf="@+id/bigBoxGame" />

    <com.isen.minigamestudio.Classes.LittleBox
        android:id="@+id/box3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@+id/bigBoxGame"
        app:layout_constraintTop_toTopOf="@+id/bigBoxGame" />

    <com.isen.minigamestudio.Classes.LittleBox
        android:id="@+id/box4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigBoxGame"
        app:layout_constraintStart_toStartOf="@+id/bigBoxGame"
        app:layout_constraintTop_toTopOf="@+id/bigBoxGame" />

    <com.isen.minigamestudio.Classes.LittleBox
        android:id="@+id/box5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigBoxGame"
        app:layout_constraintEnd_toEndOf="@+id/bigBoxGame"
        app:layout_constraintStart_toStartOf="@+id/bigBoxGame"
        app:layout_constraintTop_toTopOf="@+id/bigBoxGame">

    </com.isen.minigamestudio.Classes.LittleBox>

    <com.isen.minigamestudio.Classes.LittleBox
        android:id="@+id/box6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigBoxGame"
        app:layout_constraintEnd_toEndOf="@+id/bigBoxGame"
        app:layout_constraintTop_toTopOf="@+id/bigBoxGame">

    </com.isen.minigamestudio.Classes.LittleBox>

    <com.isen.minigamestudio.Classes.LittleBox
        android:id="@+id/box7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigBoxGame"
        app:layout_constraintStart_toStartOf="@+id/bigBoxGame" />

    <com.isen.minigamestudio.Classes.LittleBox
        android:id="@+id/box8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigBoxGame"
        app:layout_constraintEnd_toEndOf="@+id/bigBoxGame"
        app:layout_constraintStart_toStartOf="@+id/bigBoxGame" />

    <com.isen.minigamestudio.Classes.LittleBox
        android:id="@+id/box9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/bigBoxGame"
        app:layout_constraintEnd_toEndOf="@+id/bigBoxGame" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:text="@string/scoreText"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bigBoxGame"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/scoreNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:text="0"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bigBoxGame"
        app:layout_constraintStart_toEndOf="@+id/scoreText" />

    <TextView
        android:id="@+id/textLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:text="@string/textLevel"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bigBoxGame"
        app:layout_constraintStart_toEndOf="@+id/scoreNumber" />

    <TextView
        android:id="@+id/levelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:text="1"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bigBoxGame"
        app:layout_constraintStart_toEndOf="@+id/textLevel" />

    <TextView
        android:id="@+id/textChangeBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:text="@string/textChangeBox"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bigBoxGame"
        app:layout_constraintStart_toEndOf="@+id/levelNumber" />

    <TextView
        android:id="@+id/numbChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:text="0"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bigBoxGame"
        app:layout_constraintStart_toEndOf="@+id/textChangeBox" />

    <TextView
        android:id="@+id/textpapvmax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/textpapvmax"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bigBoxGame" />

    <TextView
        android:id="@+id/nbPaPvMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="20"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/textpapvmax"
        app:layout_constraintTop_toBottomOf="@+id/bigBoxGame" />

    <TextView
        android:id="@+id/textDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginBottom="30dp"
        android:text="@string/textDifficulty"
        android:textSize="@dimen/activity_text_size"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/textLevel"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonRules"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorButtonDungeon"
        android:text="@string/buttonRules"
        android:textSize="@dimen/activity_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/savebutton" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorButtonDungeon"
        android:text="@string/savebutton"
        android:textSize="@dimen/activity_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@color/colorPrimary" />   -->


</androidx.constraintlayout.widget.ConstraintLayout>